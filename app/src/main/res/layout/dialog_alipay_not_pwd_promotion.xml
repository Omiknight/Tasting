<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customDialog"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    app:behavior_peekHeight="0dp"
    >

  <ImageView
      android:id="@+id/action_cancel"
      android:layout_width="15dp"
      android:layout_height="15dp"
      android:layout_gravity="right"
      android:src="@drawable/pay_dialog_cancel"
      />

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      >

    <ImageView
        android:id="@+id/pay_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:src="@drawable/pay_alipay_no_pwd"
        />

    <TextView
        android:id="@+id/pay_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/pay_img"
        android:text="@string/alipay_open_alipay_title"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_title_tv"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/pay_img"
        android:text="@string/alipay_open_alipay_desc"
        android:textSize="12sp"
        />

  </RelativeLayout>

  <TextView
      android:id="@+id/action_open_alipay_sign"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:layout_marginBottom="20dp"
      android:background="@drawable/pay_button_blue_round"
      android:gravity="center"
      android:text="@string/alipay_open_no_pwd_right_now"
      android:textColor="#ffffff"
      android:textSize="16sp"
      android:textStyle="bold"
      />

</LinearLayout>